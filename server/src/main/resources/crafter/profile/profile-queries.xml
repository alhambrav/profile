<properties>
    <comment>
        This File contains default CrafterCms MongoDBQueries.
        If you want to override any of this queries use custom-queries.properties file located
        classpath:crafter/profile/extension/mongo.properties
    </comment>

    <entry key="profile.ticket.ByUsername">
        {username:#}
    </entry>
    <entry key="profile.ticket.expirationDateOlder">
        {date:{"$lt": #}}
    </entry>

    <entry key="profile.ticket.getById">
        {_id:#}
    </entry>

    <entry key="profile.tenant.byRoles">
        {roles : {$in:#} }
    </entry>

    <entry key="profile.tenant.byName">
        {tenantName : #}
    </entry>

    <entry key="profile.role.byName">
        {roleName :#}
    </entry>

    <entry key="profile.grouproles.byNameAndTenantName">
        {name:{$in:#},tenantName:#}
    </entry>

    <entry key="profile.grouproles.byTenantName">
        {tenantName:#}
    </entry>

</properties>