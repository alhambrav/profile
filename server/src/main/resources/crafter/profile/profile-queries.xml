<properties>
    <comment>
        This File contains default CrafterCms MongoDBQueries.
        If you want to override any of this queries use custom-queries.properties file located
        classpath:crafter/profile/extension/mongo.properties
    </comment>


    <!--This entry "profile.profiles.defaultFields" is used to "filter" the retrieve only-->
    <!--the basic files this is done due Attributes could be large.-->
    <entry key="profile.profiles.defaultFields">
        {
        "_id" :1,
        "userName" : 1,
        "password" : 1,
        "active" : 1,
        "created" : 1,
        "modified" : 1,
        "tenantName" : 1,
        "email" : 1,
        "verify" :1,
        "roles":1
        }
    </entry>

    <entry key="profile.ticket.ByUsername">
        {username:#}
    </entry>
    <entry key="profile.ticket.expirationDateOlder">
        {date:{"$lt": #}}
    </entry>

    <entry key="profile.ticket.getById">
        {_id:#}
    </entry>

    <entry key="profile.tenant.byRoles">
        {roles : {$in:#} }
    </entry>

    <entry key="profile.tenant.byName">
        {tenantName : #}
    </entry>

    <entry key="profile.role.byName">
        {roleName :#}
    </entry>

    <entry key="profile.grouproles.byNameAndTenantName">
        {name:{$in:#},tenantName:#}
    </entry>

    <entry key="profile.grouproles.byTenantName">
        {tenantName:#}
    </entry>

    <entry key="profile.profiles.getByRolesAndTenant">
        {tenantName:#,roles:{$in:{#}}
    </entry>
    <entry key="profile.profiles.byTenantName">
        {tenantName:#}
    </entry>
    <entry key="profile.profiles.byId">
        {_id:#}
    </entry>
    <entry key="profile.profile.byIds">
        {_id:{$in:#}}
    </entry>
    <entry key="profile.profile.ByUsername">
        {userName:#,tenantName:#}
    </entry>
    <entry key="profile.profile.byTenant">
        {tenantName:#}
    </entry>
    <entry key="profile.profile.removeRole">
        { $pull: { roles: # } }
    </entry>
    <entry key="profile.profile.byAttributeValue">
        {attributes.#:#}
    </entry>
</properties>